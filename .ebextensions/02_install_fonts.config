commands:
  01_download_font:
    command: wget -O /tmp/LibreBaskerville-Regular.ttf  https://github.com/google/fonts/blob/main/ofl/librebaskerville/LibreBaskerville-Regular.ttf
  02_move_font:
    command: mv /tmp/LibreBaskerville-Regular.ttf /usr/share/fonts/default/TrueType/
  03_update_font_cache:
    command: fc-cache -fv
